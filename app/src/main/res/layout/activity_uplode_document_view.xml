<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- EditText for entering prescription -->
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uplode Documents"

        android:textSize="30dp"
        android:textColor="@color/blue"
        android:layout_marginBottom="10dp"/>




            <EditText
                android:id="@+id/doctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/one"
                android:fontFamily="@font/poppins_medium"
                android:hint="Name"
                android:padding="16dp" />



            <EditText
                android:id="@+id/doctorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/one"
                android:fontFamily="@font/poppins_medium"
                android:hint="Email"
                android:padding="16dp" />






            <EditText
                android:id="@+id/editPrescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/one"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter Prescription"
                android:padding="16dp" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--desc-->


                        <!--symptoms-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/etSymptoms"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/one"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="Symptoms"
                                    android:padding="16dp" />

                                <ImageView
                                    android:id="@+id/ivAddSymptom"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/addbutoon" />

                            </LinearLayout>

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:id="@+id/llSymptoms"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" />

                            </HorizontalScrollView>

                        </LinearLayout>

                        <!--medicines-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/etMedicines"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/one"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="Medicines"
                                    android:padding="16dp" />

                                <ImageView
                                    android:id="@+id/ivAddMedicine"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/addbutoon" />

                            </LinearLayout>

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:id="@+id/llMedicines"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" />

                            </HorizontalScrollView>

                        </LinearLayout>

                        <!--measures-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/etMeasures"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/one"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="Measures"
                                    android:padding="16dp" />

                                <ImageView
                                    android:id="@+id/ivAddMeasure"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/addbutoon" />

                            </LinearLayout>

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:id="@+id/llMeasures"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" />

                            </HorizontalScrollView>


                        </LinearLayout>




                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
    <!-- Button for uploading an image -->




            <Button
                android:id="@+id/generateBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/one"
                android:fontFamily="@font/poppins_semibold"
                android:padding="7dp"
                android:layout_marginTop="7dp"
                android:text="Generate block"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="17dp" />
            <Button
                android:id="@+id/buttonUploadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/one"
                android:fontFamily="@font/poppins_semibold"
                android:padding="7dp"
                android:text="Upload Image"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="17dp" />



    <!-- ImageView to show the uploaded image -->
    <ImageView
        android:id="@+id/uploadedImageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- Button for uploading a PDF -->
            <Button
                android:id="@+id/buttonUploadPDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/one"
                android:fontFamily="@font/poppins_semibold"
                android:padding="7dp"
                android:text="Upload PDF"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="17dp" />

    <!-- TextView to show the uploaded PDF file name -->
    <TextView
        android:id="@+id/pdfFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No PDF Uploaded"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />




            <Button
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/one"
                android:fontFamily="@font/poppins_semibold"
                android:padding="7dp"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="17dp" />

        </LinearLayout>
    </ScrollView>





</LinearLayout>
