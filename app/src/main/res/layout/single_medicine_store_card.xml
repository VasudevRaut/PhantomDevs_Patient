<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/fullLead"

    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:background="#f5fafe">

        <androidx.cardview.widget.CardView

            android:id="@+id/cardTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:elevation="40dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp"
            android:background="@drawable/one"
            app:cardUseCompatPadding="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/two">


                <androidx.cardview.widget.CardView
                    android:id="@+id/imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/dish_img1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="-10.5dp"
                        android:layout_marginTop="-10.1dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_7"></ImageView>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/cust_name_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imageview"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/med_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="Vasudev Pharmacy"
                        android:textColor="@color/blue"
                        android:textSize="18sp"
                        android:textStyle="bold"></TextView>


                    <ImageView
                        android:id="@+id/platform"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight=".05"
                        android:src="@drawable/unline" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cust_name_linear"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@+id/imageview"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-15dp"
                        android:numStars="1"
                        android:progressBackgroundTint="@color/white"
                        android:progressTint="#f5fafe"
                        android:rating="4"
                        android:scaleX="0.5"
                        android:scaleY="0.5" />

                    <TextView
                        android:id="@+id/med_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginTop="5dp"
                        android:text="4.5"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/med_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="(23 Reviews)"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pro_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rating"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@+id/imageview"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hot_lead"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight=".5"
                        android:src="@drawable/location"
                        android:tag="white" />

                    <TextView
                        android:id="@+id/med_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="7"
                        android:text="Antop hill, wadala, mumbai"
                        android:textColor="@color/blue"
                        android:textSize="15sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pro_type"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@+id/imageview"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/med_distance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="7"
                        android:text="Distsne less than 3km"
                        android:textColor="@color/blue"
                        android:textSize="12sp">

                    </TextView>

                </LinearLayout>

                <!--        <TextView-->
                <!--            android:id="@+id/cust_preference"-->
                <!--            android:layout_width="80dp"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:layout_below="@+id/pro_type"-->
                <!--            android:layout_toRightOf="@+id/imageview"-->
                <!--            android:layout_marginLeft="20dp"-->
                <!--            android:layout_marginBottom="-10dp"-->
                <!--            android:layout_marginTop="0dp"-->
                <!--            android:text="2BHK"-->
                <!--            android:textColor="#7A7979"-->
                <!--            android:textSize="12sp">-->

                <!--        </TextView>-->

                <!--        <TextView-->
                <!--            android:id="@+id/cust_budget"-->
                <!--            android:layout_width="50dp"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:layout_below="@+id/cust_project"-->
                <!--            android:layout_alignRight="@+id/cust_preference"-->
                <!--            android:layout_marginTop="0dp"-->
                <!--            android:layout_marginBottom="-10dp"-->
                <!--            android:layout_marginRight="-50dp"-->
                <!--            android:layout_toRightOf="@+id/cust_preference"-->
                <!--            android:text="â‚¹40lac"-->
                <!--            android:textColor="#7A7979"-->
                <!--            android:textSize="12sp">-->
                <!--        </TextView>-->

                <TextView
                    android:id="@+id/rm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cust_preference"
                    android:layout_alignRight="@+id/cust_preference"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="-100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/imageview"
                    android:text=""
                    android:textColor="#6076a6"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>